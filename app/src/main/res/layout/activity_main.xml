<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/IV_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LL_city_name"
        android:scaleType="centerCrop"
        android:focusableInTouchMode="false"
        android:isScrollContainer="false"
        android:src="@color/grayish" />

    <LinearLayout
        android:id="@+id/LL_city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayish"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ED_city_name"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:hint="@string/enter_city_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/IV_search"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_search_24" />

        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/IV_add_city"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_add_24" />

    </LinearLayout>

        <TextView
            android:id="@+id/TV_city_name"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/LL_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/city_name"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/TV_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_city_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="29â„ƒ"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/IV_condition"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/TV_temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/TV_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IV_condition"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:isScrollContainer="false"
        android:text="Condition"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TV_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_condition"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="false"
        android:isScrollContainer="false"
        android:text="@string/today_s_weather_forecast"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_forecast"
        android:focusableInTouchMode="false"
        android:isScrollContainer="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


</RelativeLayout>